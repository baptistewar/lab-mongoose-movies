<h2>Celebrities</h2>

{{#unless celebrities}}
<p>no celebrities yet sorry</p>
{{/unless}}

<ul class="list celebrities">
    {{#each celebrities}}
    <li class="celebrity">
        <h2>{{this.name}}</h2>
        <a class="link" href="/celebrity/{{this._id}}">see more</a>
        <a class="link" href="/celebrity/update/{{this._id}}/">update</a>
        <a class="link" href="/celebrity/delete/{{this._id}}">delete</a>
    </li>
    {{/each}}
    <li class="celebrity"><a class="link" href="/celebrity/new">create celebrity</a></li>

</ul>